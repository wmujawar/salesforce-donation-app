<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Pledge_Amount_required</fullName>
    <active>true</active>
    <errorConditionFormula>AND( Is_Pledged__c = True,  ISBLANK( Pledged_Amount__c))</errorConditionFormula>
    <errorDisplayField>Pledged_Amount__c</errorDisplayField>
    <errorMessage>Amount is required when Is Pledged is checked</errorMessage>
</ValidationRule>
